{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://raw.githubusercontent.com/bettyblocks/json-schema/master/schemas/actions/function/option/types/record.json",
  "title": "Options Type Record",
  "description": "Properties specific to the Record option type.",
  "type": "object",
  "allOf": [
    {
      "$ref": "/bettyblocks/json-schema/master/schemas/actions/function/option/types/base.json"
    }
  ],
  "properties": {
    "type": {
      "const": "Record"
    },
    "model": {
      "description": "The model on which the record is based. Should refer to another option name which is model based.",
      "type": "string"
    }
  },
  "if": {
    "properties": {
      "io": {
        "const": "out"
      }
    }
  },
  "then": {
    "required": ["model"]
  }
}
