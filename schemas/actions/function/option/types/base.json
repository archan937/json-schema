{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://raw.githubusercontent.com/bettyblocks/json-schema/master/schemas/actions/function/option/types/base.json",
  "title": "Base",
  "description": "The base properties that are required for all options.",
  "type": "object",
  "properties": {
    "type": {
      "description": "The type of option you want to supply. Examples are: Boolean, Number and Model.",
      "enum": [
        "Boolean",
        "Collection",
        "Model",
        "Number",
        "Output",
        "PropertyMap",
        "Record",
        "Text"
      ]
    },
    "dependsOn": {
      "description": "List of other options that this option depends on.",
      "type": "array",
      "items": {
        "option": {
          "type": "string"
        },
        "action": {
          "enum": ["CLEAR"]
        }
      }
    }
  },
  "required": ["type"]
}
